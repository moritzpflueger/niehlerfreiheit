{
  "version": 2,
  "builds": [
    {
      "src": "index.php",
      "use": "vercel-php@0.7.1"
    },
    {
      "src": "assets/**",
      "use": "@vercel/static"
    },
    {
      "src": "media/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/(assets|media)/.*",
      "dest": "/$0"
    },
    {
      "src": "/(.*)",
      "dest": "/index.php"
    }
  ]
}

